extends layout

block content
  h1= title

  // Show query parameters
  p Rows: #{query.rows}, Columns: #{query.cols}

  // Convert query parameters to numbers
  - var rows = Number(query.rows);
  - var cols = Number(query.cols);

  // Validate input: Check if both are integers
  if !Number.isInteger(rows) || !Number.isInteger(cols)
    p Error: Rows and Columns must be integers.

  // Validate input: Check range (3-13)
  else if rows < 3 || rows > 13
    p Error: Rows must be between 3 and 13.

  else if cols < 3 || cols > 13
    p Error: Columns must be between 3 and 13.

  else
    // Create the table
    table#outer.border
      - for (let i = 0; i < rows; i++) {
        tr
          - for (let j = 0; j < cols; j++) {
            td= i - j
          - }
      - }

  // Add a back link
  br
  a(href='/') Go Back to Home
